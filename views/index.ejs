<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block w-full rounded-md px-5 py-2 bg-zinc-800"
            type="text"
            placeholder="This goes here" name="title"
          />
          <textarea
            class="block mt-2 w-full rounded-md px-5 py-2 resize-none bg-zinc-800"
            name="details"
            placeholder="Write your task here"
          ></textarea>
          <input class="mt-2 bg-blue-600" type="submit" value="Create Task" />
        </form>
      </div>
      <div class="task flex gap-3 flex-wrap p-10">
        <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
                <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                    <h1 class="text-white text-3xl tracking-tighter capitalize">
                        <%= val%>
                    </h1>
                    <div class="flex  w-full justify-between items-center mt-3 ">
                      <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read more</a>
                      <a class="text-zinc-600" href="/edit/<%= val %> ">edit filename</a>
                    </div>
                    
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text-blue-500">no task yet</h3>
        <% } %>
        
      </div>
    </div>
  </body>
</html>
